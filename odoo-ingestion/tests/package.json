{
  "name": "odoo-ingestion-tests",
  "version": "1.0.0",
  "description": "Comprehensive validation and testing framework for Odoo data ingestion",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "validate:products": "node validators/product-validator.js",
    "validate:customers": "node validators/customer-validator.js",
    "validate:orders": "node validators/order-validator.js",
    "validate:inventory": "node validators/inventory-validator.js",
    "validate:all": "npm run validate:products && npm run validate:customers && npm run validate:orders && npm run validate:inventory",
    "generate:fixtures": "node fixtures/generate-test-data.js",
    "check:schemas": "node utils/schema-validator.js",
    "integration:test": "node integration/test-validation-pipeline.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "lodash": "^4.17.21",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.0",
    "c8": "^8.0.1",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "odoo",
    "validation",
    "data-quality",
    "testing"
  ],
  "author": "Quality Validation Specialist",
  "license": "MIT"
}
